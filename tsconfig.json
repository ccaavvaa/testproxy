{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./exe/src",
	"newLine": "CRLF",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "rootDirs": ["src"]
  },
  "exclude": [
    "node_modules",
    "exe"
  ]
}
